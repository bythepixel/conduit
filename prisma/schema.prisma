generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Cadence {
  daily
  weekly
  monthly
}

model SlackChannel {
  id        Int                   @id @default(autoincrement())
  channelId String                @unique
  name      String?
  isClient  Boolean               @default(false)
  mappings  MappingSlackChannel[]
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
}

model HubspotCompany {
  id             Int            @id @default(autoincrement())
  companyId      String         @unique
  name           String?
  btpAbbreviation String?       @unique
  activeClient    Boolean        @default(false)
  ownerId        String?        // HubSpot company owner ID
  mappings        SlackMapping[]
  meetingNotes    MeetingNote[]
  harvestCompanyMappings HarvestCompanyMapping[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model SlackMapping {
  id               Int                   @id @default(autoincrement())
  title            String?
  hubspotCompanyId Int
  hubspotCompany   HubspotCompany        @relation(fields: [hubspotCompanyId], references: [id], onDelete: Cascade)
  slackChannels    MappingSlackChannel[]
  cadence          Cadence               @default(daily)
  lastSyncedAt     DateTime?
  cronLogMappings  CronLogMapping[]
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt

  @@index([hubspotCompanyId])
}

model MappingSlackChannel {
  id             Int           @id @default(autoincrement())
  mappingId      Int
  slackChannelId Int
  mapping        SlackMapping  @relation(fields: [mappingId], references: [id], onDelete: Cascade)
  slackChannel   SlackChannel  @relation(fields: [slackChannelId], references: [id], onDelete: Cascade)
  createdAt      DateTime      @default(now())

  @@unique([mappingId, slackChannelId])
  @@index([mappingId])
  @@index([slackChannelId])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String?  @unique
  password  String
  firstName String
  lastName  String
  slackId   String?  @unique
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prompt {
  id        Int      @id @default(autoincrement())
  name      String
  content   String
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CronLog {
  id               Int              @id @default(autoincrement())
  startedAt        DateTime         @default(now())
  completedAt      DateTime?
  status           String // 'running', 'completed', 'failed'
  cadences         String[] // Array of cadences that were active
  dayOfWeek        Int? // Day of week (0-6)
  dayOfMonth       Int? // Day of month
  lastDayOfMonth   Int? // Last day of the month
  mappingsFound    Int              @default(0) // Number of mappings found
  mappingsExecuted Int              @default(0) // Number of mappings successfully executed
  mappingsFailed   Int              @default(0) // Number of mappings that failed
  errorMessage     String? // Error message if the cron run failed
  mappings         CronLogMapping[]
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  @@index([startedAt])
  @@index([status])
}

model CronLogMapping {
  id           Int           @id @default(autoincrement())
  cronLogId    Int
  cronLog      CronLog       @relation(fields: [cronLogId], references: [id], onDelete: Cascade)
  mappingId    Int
  mapping      SlackMapping  @relation(fields: [mappingId], references: [id], onDelete: Cascade)
  status       String // 'success', 'failed', 'skipped'
  errorMessage String? // Error message if failed
  createdAt    DateTime      @default(now())

  @@unique([cronLogId, mappingId])
  @@index([cronLogId])
  @@index([mappingId])
}

model MeetingNote {
  id            Int       @id @default(autoincrement())
  meetingId     String    @unique // Fireflies.ai meeting ID
  title         String?
  notes         String?   @db.Text
  transcriptUrl String?
  summary       String?   @db.Text
  participants  String[] // Array of participant names/emails
  duration      Int?      // Duration in minutes
  meetingDate      DateTime?
  metadata         Json?     // Additional metadata from Fireflies.ai
  hubspotCompanyId Int?
  hubspotCompany   HubspotCompany? @relation(fields: [hubspotCompanyId], references: [id], onDelete: SetNull)
  syncedToHubspot  Boolean  @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([meetingId])
  @@index([meetingDate])
  @@index([hubspotCompanyId])
}

model FireHookLog {
  id                Int       @id @default(autoincrement())
  date              DateTime  @default(now())
  meetingId         String?   // Fireflies.ai meeting ID
  eventType         String    // Type of webhook event (e.g., 'transcript_completed', 'summary_ready')
  clientReferenceId String?   // Client reference ID from webhook
  payload           Json?     // Full webhook payload
  processed         Boolean   @default(false) // Whether the webhook has been processed
  isAuthentic       Boolean?  // Whether the webhook signature was verified
  computedSignature String?   // HMAC SHA-256 signature computed using FIREFLIES_WEBHOOK_SECRET
  receivedSignature String?   // Signature value from x-hub-signature header
  errorMessage      String?   // Error message if processing failed
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([date])
  @@index([meetingId])
  @@index([eventType])
  @@index([clientReferenceId])
}

model HarvestInvoice {
  id                Int       @id @default(autoincrement())
  harvestId         String    @unique // Harvest API invoice ID
  clientId          String?   // Harvest client ID
  clientName        String?   // Client name from Harvest
  harvestCompanyId  Int?      // Reference to HarvestCompany
  harvestCompany    HarvestCompany? @relation(fields: [harvestCompanyId], references: [id], onDelete: SetNull)
  number            String?   // Invoice number
  purchaseOrder     String?   // Purchase order number
  amount            Decimal?  @db.Decimal(10, 2) // Total amount
  dueAmount         Decimal?  @db.Decimal(10, 2) // Amount due
  taxAmount         Decimal?  @db.Decimal(10, 2) // Tax amount
  discountAmount    Decimal?  @db.Decimal(10, 2) // Discount amount
  subject           String?   // Invoice subject
  notes             String?   @db.Text // Invoice notes
  currency          String?   // Currency code
  state             String?   // Invoice state: draft, open, paid, closed
  issueDate         DateTime? // Issue date
  dueDate           DateTime? // Due date
  paidDate          DateTime? // Paid date
  paymentTerm       String?   // Payment term
  metadata          Json?     // Additional metadata from Harvest API
  hubspotDealId     String?   // HubSpot deal ID if deal was created from this invoice
  cronLogInvoiceLogs HarvestInvoiceCronLogInvoice[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([harvestId])
  @@index([clientId])
  @@index([harvestCompanyId])
  @@index([state])
  @@index([issueDate])
  @@index([dueDate])
}

model HarvestInvoiceCronLog {
  id               Int                              @id @default(autoincrement())
  startedAt        DateTime                         @default(now())
  completedAt      DateTime?
  status           String                           // 'running', 'completed', 'failed'
  invoicesFound    Int                              @default(0) // Number of invoices found
  invoicesCreated  Int                              @default(0) // Number of invoices created
  invoicesUpdated  Int                              @default(0) // Number of invoices updated
  invoicesFailed   Int                              @default(0) // Number of invoices that failed
  errorMessage     String?                          // Error message if the cron run failed
  errors           String[]                         // Array of error messages
  invoiceLogs      HarvestInvoiceCronLogInvoice[]
  createdAt        DateTime                         @default(now())
  updatedAt        DateTime                         @updatedAt

  @@index([startedAt])
  @@index([status])
}

model HarvestInvoiceCronLogInvoice {
  id                Int                      @id @default(autoincrement())
  cronLogId         Int
  cronLog           HarvestInvoiceCronLog     @relation(fields: [cronLogId], references: [id], onDelete: Cascade)
  invoiceId         Int
  invoice           HarvestInvoice            @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  status            String                   // 'success', 'failed', 'skipped'
  errorMessage      String?                  // Error message if failed
  createdAt         DateTime                 @default(now())

  @@unique([cronLogId, invoiceId])
  @@index([cronLogId])
  @@index([invoiceId])
}

model HarvestCompany {
  id                Int                      @id @default(autoincrement())
  harvestId         String                   @unique // Harvest API client ID
  name              String?                  // Company name from Harvest
  isActive          Boolean                  @default(true)
  invoices          HarvestInvoice[]
  mappings          HarvestCompanyMapping[]
  createdAt         DateTime                 @default(now())
  updatedAt         DateTime                 @updatedAt

  @@index([harvestId])
  @@index([name])
}

model HarvestCompanyMapping {
  id                Int                      @id @default(autoincrement())
  hubspotCompanyId  Int
  hubspotCompany    HubspotCompany           @relation(fields: [hubspotCompanyId], references: [id], onDelete: Cascade)
  harvestCompanyId  Int
  harvestCompany    HarvestCompany           @relation(fields: [harvestCompanyId], references: [id], onDelete: Cascade)
  createdAt         DateTime                 @default(now())
  updatedAt         DateTime                 @updatedAt

  @@unique([hubspotCompanyId, harvestCompanyId])
  @@index([hubspotCompanyId])
  @@index([harvestCompanyId])
}
